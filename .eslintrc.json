{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": ["*.html"],
      "rules": {
        "no-irregular-whitespace": "off",
        "no-empty": ["error", { "allowEmptyCatch": true }]
      }
    }
  ],
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-undef": "error"
  }
}
